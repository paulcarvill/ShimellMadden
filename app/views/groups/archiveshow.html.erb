<% content_for :meta do %>
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@Shimell_Madden">
<meta name="twitter:title" content="<%= @item.name unless @item.name.nil?  %>">
<meta name="twitter:description" content="<%= @item.description unless @item.description.nil? %>">
<meta name="twitter:image:src" content="http://www.shimellandmadden.com<%= @item.img_url_large %>">
<meta name="twitter:domain" content="shimellandmadden.com">

<meta property="og:title" content="<%= @item.name unless @item.name.nil? %>" />
<meta property="og:site_name" content="Shimell and Madden"/>
<meta property="og:url" content="http://www.shimellandmadden.com/news/<%= @item.id %>" />
<meta property="og:description" content="<%= @item.description unless @item.description.nil? %>" />
<meta property="og:image" content="http://www.shimellandmadden.com<%= @item.img_url_large %>" />
<meta property="fb:app_id" content="560942770677358" />
<meta property="og:type" content="article" />
<% end %>

<section class="blog archiveitem">
  <aside>
    <h2>Archive</h2>
    <h3><%= @item.name %></h3>
    <p class="desc"><%= if @item.date then @item.date.strftime("%d.%m.%Y") else @item.created_at.strftime("%d.%m.%Y") end %><br /><%= @item.description %></p>
    <p class="topback">
      <a href="/archive">
        <%= render "shared/leftarrowsmall" %>Back to archive
      </a>
    </p>
  </aside>
  <article style="position: relative;">
    <img src="<%= @item.img_url_large %>" class="<%= if @item.itemImage.height >= @item.itemImage.width then "tall" else "" end %>" />
    <p class="bottomback"><%= link_to 'Back to archive', archive_path %></p>
  </article>
</section>