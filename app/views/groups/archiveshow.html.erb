<section class="blog archiveitem">
  <aside>
    <h2>Archive</h2>
    <h3><%= @item.name %></h3>
    <p class="desc"><%= @item.description %></p>
    <p class="topback"><%= link_to 'Back to archive', archive_path %></p>
  </aside>
  <article style="position: relative;">
    <img src="<%= @item.itemImage.url %>" class="<%= if @item.itemImage.height > @item.itemImage.width then "tall" else "" end %>" />
    <p class="bottomback"><%= link_to 'Back to archive', archive_path %></p>
  </article>
</section>