<div id="items">
  <section class="blog collections">
    <article style="position: relative">
      <div id="my-carousel" class="my-carousel">
        <div class="collections-info">
          <h2>Collections</h2>
          <% @collections.each do |collection| %>
            <p><a href="/collections/<%= collection.id %>"><%= collection.name %></a></p>
          <% end %>
        </div>
        <% @collections.each_with_index do |collection, index| %>
        <div class="carousel<% if index == 0 %> active<% end %>">
        
          <div class="collections-info">
            <h2>Collections</h2>
            <% @collections.each do |collection| %>
              <p><a href="/collections/<%= collection.id %>"><%= collection.name %></a></p>
            <% end %>
          </div>

          <a href="/collections/<%= collection.id %>">
            <div class="imgcontainer" style="background-size: cover; background-position: 50% 50%; background-image: url(<%= collection.images.first.img_url_large %>)">
              
              <div class="aboutcoll" style="position: absolute; bottom:0; width: 330px; left: 50%; margin-left: -165px; height: 40%; color: #fff; text-align: center;">
                <h3 style="color: #fff; font-size: 60px;"><%= collection.name %></h3>
                <hr style="font-size: 22px; margin: 16px auto; border-style: solid;">
                <p><%= collection.description %></p>  
                <p class="readmore">Read more about <%= collection.name %></p>
              </div>
              
            </div>
          </a>
        </div>
        <% end %>
      </div>
      <p class="carousel-prev">
        <svg id="icon-arrow_big_left_idle" viewBox="0 0 1024 1024">
          <path class="path1" d="M1024 512c0 282.77-229.23 512-512 512s-512-229.23-512-512c0-282.77 229.23-512 512-512s512 229.23 512 512z" />
          <path class="path2" d="M689.231 764.062l-454.892-252.062 454.892-252.062v504.123zM317.046 512l332.8 185.108v-370.215l-332.8 185.108z" />
        </svg>
      </p>
      <p class="carousel-next">
        <svg id="icon-arrow_big_right_idle" viewBox="0 0 1024 1024">                
            <path class="path1" d="M1024 512c0 282.77-229.23 512-512 512s-512-229.23-512-512c0-282.77 229.23-512 512-512s512 229.23 512 512z" />
            <path class="path2" d="M334.769 259.938l454.892 252.062-454.892 252.062v-504.123zM374.154 326.892v370.215l332.8-185.108-332.8-185.108z" />
        </svg>
      </p>
      <p class="indicator"></p>
    </article>
  </section>
</div>

<% content_for :perpagejs do %>
<script>
    if (!Modernizr.touch) {
      carouselAuto = window.setInterval(function(){
        //$('.carousel-next').click();
      }, 4000);
    }
</script>
<% end %>