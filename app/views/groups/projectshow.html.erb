<% content_for :meta do %>
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@Shimell_Madden">
<meta name="twitter:title" content="<%= @project.name %>">
<meta name="twitter:description" content="<%= @project.description %>">
<meta name="twitter:image:src" content="http://www.shimellandmadden.com<%= @project.images.first.img_url_large %>">
<meta name="twitter:domain" content="shimellandmadden.com">

<meta property="og:title" content="<%= @project.name %>" />
<meta property="og:site_name" content="Shimell and Madden"/>
<meta property="og:url" content="http://www.shimellandmadden.com/projects/<%= @project.id %>" />
<meta property="og:description" content="<%= @project.description %>" />
<meta property="og:image" content="http://www.shimellandmadden.com<%= @project.images.first.img_url_large %>" />
<meta property="fb:app_id" content="560942770677358" />
<meta property="og:type" content="article" />
<% end %>

<section class="blog projectitem">
  
  <aside>
    <h2><%= @project.name %></h2>
    <p class="desc"><%= @project.description.html_safe %></p>
    <p class="topback">
      <a href="/projects"><%= render 'shared/leftarrowsmall' %>Back to projects</a></p>
  </aside>
  <article style="position: relative;">
    <div id="my-carousel" class="my-carousel">
      <% @images.each_with_index do |item, index|%>
        <div class="carousel<% if index == 0 %> active<% end %><% if item.itemImage.height > item.itemImage.width %> talll<% else %> widee<% end %>">
          <div style="background-image: url(<%= item.img_url_large %>);" class="<%= item.itemImage.height > item.itemImage.width ? "taller" : "wider" %>" /></div>
        </div>
      <% end %>
      
      <%= render "shared/carouselnav" %>

    </div> <!-- end carousel -->
    
    <p class="indicator"></p>
    
    <div id="projectnav">
      
      <p id="prev">
        <% if @previous %>
        <a href="/projects/<%= @previous.id %>">
          <%= render 'shared/leftarrowsmall' %>
          <span>Previous item</span>
        </a>
        <% end %>
      </p>
      <p id="back"><%= link_to 'Back to Projects', groups_path %></p>
      <p id="next">
        <% if @next %><a href="/projects/<%= @next.id %>"><span>Next item</span><%= render 'shared/rightarrowsmall' %></a><% end %>
      </p>
    </div>
  </article>
 </section>