<!DOCTYPE html>
<html>
<head>
  <title>ShimellMadden</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="minimal-ui, width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no">
  <%= yield :meta %>
</head>
<body class="

  <%= if controller?("items") && action?("homepage") then "home " 
    elsif controller?("items") && action?("index") then "items "
      elsif controller?("groups") && action?("index") && params[:type] == 'collections' then "collections" 
        elsif controller?("groups") && action?("show") && params[:type] == 'collections' then "collection" 
          elsif controller?("pages") && action?("stockists") then "other stockists" 
            elsif controller?("groups") && action?("index") && params[:type] == 'projects' then "projects" 
            elsif controller?("groups") && action?("show") && params[:type] == 'projects' then "project" 
              else "other " end %>
            <%= if controller?("pages") && action?("shop") then "shoppage" end %>">
    <script type="text/javascript">document.getElementsByTagName('body')[0].className+=' js'</script>
    <%= yield %>

    <% if not controller?("groups") && (action?("index") or action?("show")) && params[:type] == 'collections' %>
      <%= render "shared/footer" %>
    <% end %>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= yield :perpagejs %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-54430370-1', 'auto');
      ga('send', 'pageview');
  </script>
</body>
</html>
