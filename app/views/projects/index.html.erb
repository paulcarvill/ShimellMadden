<div id="items">

<section class="blog items">
  <header>
    <%= render "shared/nav" %>
  </header>
  <article>
    <% @projects.each do |project| %>
      <% project.items.each do |item| %>
        <div class="item item-one">
          <%= image_tag item.itemsImage.url, height: '100%' %>
          <%= link_to item.project do %>
            <div style="width: 100%; height: 100%; background-color: #999; opacity: 0.7;">
              <%= item.project.name %>
              <%= item.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </article>
 </section>

 <%= render "shared/footer" %>

</div>

