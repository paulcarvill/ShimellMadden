<div id="items">

<section class="blog projects">
  <header>
    <%= render "shared/nav" %>
  </header>
  <article>
    <% @projects.each_with_index do |project, index| %>
      <% if index == 0 %>
        <div class="item item-one">
      <% elsif index == 1 %>
        <div class="item item-two">
      <% elsif index == 2 %>
        <div class="item item-three">
      <% elsif index == 3 %>
        <div class="item item-four">
      <% elsif index == 4 %>
        <div class="item item-five">
      <% end %>

      <% project.items.each_with_index do |item, index| %>

        <% if index == 0 %>
          <%= image_tag item.image_style_one_url, height: '100%' %>
          <%= link_to item.project do %>
          <div style="width: 100%; height: 100%; background-color: #999; opacity: 0.7;">
            <%= item.project.name %>
            <%= item.name %>
          </div>
          <% end %>
        <% end %>
      <% end %>
      </div>
      <% end %>
  </article>
 </section>

<%= will_paginate @projects %>

 <%= render "shared/footer" %>

</div>

