<div id="items">

<section class="blog items">
  <header>
    <%= render "shared/nav" %>
  </header>
  <article>
    <% @items.each_with_index do |item, index| %>

      <% if index == 0 %>
        <div class="item item-1">
        <%= image_tag item.itemsImage.url, height: '100%' %>
      <% elsif index == 1 %>
        <div class="item item-2">
        <%= image_tag item.itemsImage.url, height: '100%' %>
      <% elsif index == 2 %>
        <div class="item item-3">
        <%= image_tag item.itemsImage.url, height: '100%' %>
      <% elsif index == 3 %>
        <div class="item item-4">
        <%= image_tag item.itemsImage.url, height: '100%' %>
      <% elsif index == 4 %>
        <div class="item item-5">
        <%= image_tag item.itemsImage.url, height: '100%' %>
      <% elsif index == 5 %>
        <div class="item item-6">
        <%= image_tag item.itemsImage.url, height: '100%' %>
      <% end %>
          
      <% if item.collection then %>
        <%= link_to item.collection do %>
          <div style="width: 100%; height: 100%; background-color: #999; opacity: 0.7;">
            <% if item.collection then %><%= item.collection.name %> /<% end %>
            <%= item.name %>
            </div>
          <% end %>
          <% elsif item.project then %>
            <%= link_to item.project do %>
            <div style="width: 100%; height: 100%; background-color: #999; opacity: 0.7;">
            <% if item.project then %><%= item.project.name %> /<% end %>
            <%= item.name %>
            </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
  </article>
 </section>

<%= will_paginate @items %>
<%= render "shared/footer" %>

<!-- Backbone shizzle -->
<script type="text/javascript">
  $(function() {
    window.router = new ShimellMadden.Routers.ItemsRouter({items: <%= @items.to_json.html_safe -%>});
    Backbone.history.start();
  });
</script>
<!-- end Backbone shizzle -->

</div>

